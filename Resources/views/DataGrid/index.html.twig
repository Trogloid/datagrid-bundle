{% set options = {
    'data_url': url('neutron_data_grid.data', {'name': dataGrid.name}),
    'row_action_url': url('neutron_data_grid.row_action', {'name': dataGrid.name}),
    'mass_action_url': url('neutron_data_grid.mass_action', {'name': dataGrid.name}),
    'sortable_url': url('neutron_data_grid.sortable_action', {'name': dataGrid.name}),
    'massActionLabels': {
        'select_all': 'select_all'|trans({}, translationDomain),
        'deselect_all': 'deselect_all'|trans({}, translationDomain),
        'with_selected': 'with_selected'|trans({}, translationDomain),
        'select_action': 'select_action'|trans({}, translationDomain),
    }
} %}

<table data-options="{{ dataGrid.exportOptions|merge(options)|json_encode }}" class='neutron-datagrid' id="neutron-datagrid-{{ dataGrid.name }}"></table>
<div id="neutron-datagrid-{{ dataGrid.name }}-pager"></div>


